  "framework": "tailwind",
  "tailwindConfig": {
    "theme": {
      "extend": {
        "colors": {
          "primary": "#111827",
          "secondary": "#E0F4FF"
        },
        "fontFamily": {
          "sans": ["Inter", "sans-serif"]
        },
        "borderRadius": {
          "xl": "12px"
        }
